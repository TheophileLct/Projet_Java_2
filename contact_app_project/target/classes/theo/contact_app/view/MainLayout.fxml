<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="450.0" prefWidth="600.0" stylesheets="@contact.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="theo.contact_app.view.MainLayoutController">
	<top>
		<MenuBar nodeOrientation="RIGHT_TO_LEFT" stylesheets="@contact.css" BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Quit">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#gotoCloseApplication" text="Close" />
					</items>
				</Menu>
				
				<Menu mnemonicParsing="false" text="Help">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#gotoHelpPage" text="Help" />
					</items>
				</Menu>
				
				<Menu mnemonicParsing="false" text="Home">
					<items>
					<MenuItem mnemonicParsing="false" onAction="#gotoHome" text="Home" />
					<SeparatorMenuItem mnemonicParsing="false" />
						<MenuItem mnemonicParsing="false" onAction="#gotoCloseApplication" text="Close" />	
					</items>
				</Menu>
	
			</menus>
         <cursor>
            <Cursor fx:constant="CLOSED_HAND" />
         </cursor>
		</MenuBar>
	</top>
</BorderPane>
